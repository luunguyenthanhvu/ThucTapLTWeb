    <div class="main-user-content" style="background-color: #e7e6e6; width: 100%; height: 100%">
        <div class="container" >
            <div class="main-container">
                <div class="ds-hoa-don-link">
                    <a href="${pageContext.request.contextPath}/page/bill/list-bill">
                        <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512">
                            <path d="M459.5 440.6c9.5 7.9 22.8 9.7 34.1 4.4s18.4-16.6 18.4-29V96c0-12.4-7.2-23.7-18.4-29s-24.5-3.6-34.1 4.4L288 214.3V256v41.7L459.5 440.6zM256 352V256 128 96c0-12.4-7.2-23.7-18.4-29s-24.5-3.6-34.1 4.4l-192 160C4.2 237.5 0 246.5 0 256s4.2 18.5 11.5 24.6l192 160c9.5 7.9 22.8 9.7 34.1 4.4s18.4-16.6 18.4-29V352z"/></svg>
                        Về danh sách hóa đơn
                    </a>
                </div>
                <div class="header-tag">
                    <h1>Chi tiết hóa đơn</h1>
                </div>
                <div class="ds-sp">
                    <table>
                        <tr>
                            <th style="width: 50px; font-weight: normal"></th>
                            <th style="width: 200px;">Danh sách sản phẩm</th>
                            <th style="width: 350px; text-align: center">Tên & mô tả</th>
                            <th style="width: 150px;">Giá</th>
                            <th style="width: 120px;">Số lượng</th>
                            <th style="width: 150px;">Tổng tiền</th>
                            <th style="width: 50px;">Hành động</th> <!-- Thêm cột chứa icon thay đổi thông tin -->
                        </tr>
                        <c:set var="totalPrice" value="0" />
                        <c:forEach items="${list}" var="product">
                            <tr>
                                <!-- Các cột thông tin sản phẩm -->
                                <td class="product-single">
                                    <a href="#">
                                        <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512">
                                            <!-- Mã SVG của sản phẩm -->
                                        </svg>
                                    </a>
                                </td>
                                <td>
                                    <img class="img-product" src="${product.getProducts().getImg()}">
                                </td>
                                <td>
                                    <!-- Tên sản phẩm và mô tả -->
                                    <div class="product-name">
                                        <h6>${product.getProducts().getNameOfProduct()}</h6>
                                    </div>
                                    <div class="product-describe">
                                        <p>${product.getProducts().getDescription()}.</p>
                                    </div>
                                </td>
                                <td>${product.getProducts().getPrice()}</td>
                                <td>
                                    <!-- Số lượng -->
                                    <div class="quantity">
                                        <span>${product.getQuantity()}</span>
                                    </div>
                                </td>
                                <td>${product.getTotalPrice()}</td>
                                <td>
                                    <!-- Thêm icon từ Font Awesome cho hành động -->
                                    <a href="${pageContext.request.contextPath}/page/bill/edit-bill?id=${product.getId()}">
                                        <i class="fa-solid fa-pen-to-square"></i> <!-- Icon từ Font Awesome để thay đổi thông tin -->
                                    </a>
                                </td>
                                <c:set var="totalPrice" value="${totalPrice + product.getTotalPrice()}" />
                            </tr>
                        </c:forEach>


                    </table>
                </div>
                <div style="position:relative; left:800px">
                    <span style="color:#82ae46; font-size:20px"> Tổng cộng:<fmt:formatNumber pattern="#,##0 ₫" value="${totalPrice}"/> </span>
                </div>
            </div>
        </div>
